	<div class ="ui huge header">
		NEW BLOG
	</div>
	<form action ="/blogs/new" method ="POST" class ="ui form">
		<div class ="field">
			<label>Title</label>
		<input type ="text" placeholder = "title" name ="blog[title]">
		</div>
		<div class ="field">
			<label>Image</label>
		<input type ="text" placeholder = "image" name ="blog[image]">
		</div>
		<div class ="field">
			<label>Body-Content</label>
		<!-- <input type ="text" placeholder = "blog post goes here" name ="blog[body]"> -->
			<textarea name ="blog[body]"></textarea>
		</div>
		<input class="ui inverted secondary button" type ="submit">
	</form>
</div>
