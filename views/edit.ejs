<!-- <%=blog%> -->
<%- include("partials/header") %>
<div class = "ui main text container segment">
	<div class ="ui huge header">
		Edit <%=blog.title%>
	</div>
	<form action ="/blogs/<%=blog._id%>?_method=PUT" method ="POST" class ="ui form">
		<div class ="field">
			<label>Title</label>
		<input type ="text" value = "<%=blog.title%>" name ="blog[title]">
		</div>
		<div class ="field">
			<label>Image</label>
		<input type ="text" value = "<%=blog.image%>" name ="blog[image]">
		</div>
		<div class ="field">
			<label>Body-Content</label>
		<!-- <input type ="text" placeholder = "blog post goes here" name ="blog[body]"> -->
			<textarea name ="blog[body]"><%=blog.body%></textarea>
		</div>
		<input class="ui inverted secondary button" type ="submit">
	</form>
</div>
<%- include("partials/footer") %>