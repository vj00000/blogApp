<%- include("partials/header") %>

<div class =" ui main text container segment">
	<div class ="ui huge header"><%=blow.title%></div>
	<div class ="ui top attached">
		<div class = "item"> 
			<img src = "<%=blow.image%>" class = "ui centered rounded image">
			<div class = "content">
				<span><%=blow.created.toDateString()%></span>
			</div>
			<div class = "description">
				<p><%- blow.body %></p>
			</div>
			<a class ="ui red basic button" href ="/blogs/<%=blow._id%>/edit">edit</a>
			<form id = "delete" action = "/blogs/<%=blow._id%>?_method=delete" method = "POST">
				<button class ="ui red basic button">delete</button>
			</form>
		</div>
	</div>	
	
</div>

<%- include("partials/footer") %>